@page
@model ListBook.Pages.ListBooks.IndexModel
@{
}
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info"> Book List</h2>
    </div>
    <div class="col-3">
        <a class="btn btn-info form-control" asp-page="CreateBook">
            create new Book
        </a>
    </div>
</div>

<div class="col-12 border p-3 m-3">
    <form method="post">
        @if (Model.books.Any())
        {
            <table class="table table-secondary border">
                <tr class="table-secondary">
                    <th>
                        <label asp-for="books.FirstOrDefault().Name"></label>
                    </th>
                    <th>
                        <label asp-for="books.FirstOrDefault().Auther"></label>
                    </th>
                     <th>
                        <label asp-for="books.FirstOrDefault().ISBN"></label>
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model.books)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Auther
                        </td>
                        <td>
                            @item.ISBN
                        </td>
                        <td>
                            <a class="btn btn-warning btn-sm">
                                ویرایش
                            </a>
                            <a class="btn btn-danger btn-sm">
                                حذف
                            </a>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p> کتابی وجود ندارد.</p>
        }
    </form>

</div>